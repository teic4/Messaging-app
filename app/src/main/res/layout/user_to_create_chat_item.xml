<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_view_profile_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/img_view_profile_picture"
        app:layout_constraintStart_toStartOf="@+id/img_view_profile_picture"
        app:layout_constraintTop_toBottomOf="@id/img_view_profile_picture" />


</androidx.constraintlayout.widget.ConstraintLayout>